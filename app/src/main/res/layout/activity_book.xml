<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BookActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/green_700"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:text="CHAT WITH SELLER"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy_image"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="The Life and Opinions of Tristram Shandy"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:text="Publisher: Lorem ipsum dolor sit amet,"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:text="Seller: Curabitur sit amet"
            />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹250"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:background="@color/green_200"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="#e5e5e5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="Morbi ut commodo neque. Quisque interdum magna nec mauris feugiat lacinia. Phasellus nec nunc sodales, bibendum nulla nec, porta felis. In et posuere nulla. Sed justo est, porttitor ut nisi sed, fermentum hendrerit lorem. Maecenas eu congue mi. Curabitur vel velit nunc. Sed a justo vel tortor aliquam accumsan pretium a tortor. Quisque consectetur urna libero, elementum luctus urna ultrices vel. Suspendisse imperdiet cursus nunc id dictum. Sed iaculis tellus et congue rhoncus."
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="Language: English"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="Book added on: 21-07-2021"
            />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>