<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="50dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/green_700">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/profile_photo"
                    android:scaleType="fitXY"
                    android:src="@drawable/book_cover" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user-email@gmail.com"
                    />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/book_icon"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="My Books"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/edit_profile"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Edit Profile"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/pending_book"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Pending Books"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/feedback_icon"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Feedback"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/wishlist_icon"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Wish List"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/settings_icon"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Settings"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right_icon"
            android:drawableLeft="@drawable/complaint_problem"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:text="Complaints"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            />


        <TextView
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Log Out"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>